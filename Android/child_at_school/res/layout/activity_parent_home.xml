<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:gravity="center"
    android:background="#214761"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ParentHome" >

   

       <Button
         android:id="@+id/buttonstud"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:layout_marginTop="30dp"
         android:background="#ffffff"
         android:text="View Student Details"
         android:textColor="#214761"
         android:textStyle="bold" />
          <Button
         android:id="@+id/buttondri"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:background="#ffffff"
         android:text="View drivers"
          android:layout_marginTop="30dp"
         android:textColor="#214761"
         android:textStyle="bold" />
       <Button
         android:id="@+id/buttonmsg"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:background="#ffffff"
         android:text="View messages"
          android:layout_marginTop="30dp"
         android:textColor="#214761"
         android:textStyle="bold" />
    
       <Button
         android:id="@+id/buttonclasses"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:background="#ffffff"
         android:text="View classes"
          android:layout_marginTop="30dp"
         android:textColor="#214761"
         android:textStyle="bold" />
      <Button
         android:id="@+id/buttonholiday"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:background="#ffffff"
         android:text="View holidays"
          android:layout_marginTop="30dp"
         android:textColor="#214761"
         android:textStyle="bold" />
       	      <Button
         android:id="@+id/buttonlogout"
         android:layout_width="271dp"
         android:layout_height="40dp"
         android:layout_marginTop="30dp"
         android:background="#ffffff"
         android:text="Logout"
         android:textColor="#214761"
         android:textStyle="bold" />

</LinearLayout>
